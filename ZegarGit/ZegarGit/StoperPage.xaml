<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ZegarGit.StoperPage">
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="CornflowerBlue" Offset="0.1"/>
            <GradientStop Color="RoyalBlue" Offset="1.0"/>
        </LinearGradientBrush>
    </ContentPage.Background>
    
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
            <Label x:Name="labelTime" Text="1:12:30" HorizontalTextAlignment="Center" FontSize="35" TextColor="White" FontAttributes="Bold"/>
            <Button Text="Start" CornerRadius="15" BackgroundColor="RoyalBlue" WidthRequest="200" HorizontalOptions="Center" TextColor="White" Margin="0,10,0,10" Clicked="StoperButton"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>